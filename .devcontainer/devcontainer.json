{
	"name": "Youki",
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {}
	},
	"customizations": {
		"vscode": {
			"settings": {
				"lldb.executable": "/usr/bin/lldb",
				"files.watcherExclude": {
					"**/target/**": true
				},
				"rust-analyzer.check": {
					"command": "clippy"
				}
			},
			"extensions": [
				"vadimcn.vscode-lldb",
				"mutantdino.resourcemonitor",
				"rust-lang.rust-analyzer",
				"tamasfe.even-better-toml",
				"fill-labs.dependi"
			]
		}
	},
	"privileged": true,
	"runArgs": [
		"--name",
		"youki-devcontainer"
	],
	"build": {
		"dockerfile": "Dockerfile"
	}
}
